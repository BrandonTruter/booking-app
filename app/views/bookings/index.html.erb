<%= turbo_frame_tag "create_booking_form" do %>
  <%= link_to '+ Schedule appointment', new_booking_path, class: 'btn btn-dark' %>
<% end %>

<div class='mt-4' data-controller='search'>
  <%= datetime_field_tag :query,'', placeholder: 'Search by date', data: {
        :action => 'change->search#search',
        :'search-target' => 'params'
  } %>
</div>

<div id="bookings" class='mt-4'>
  <h2 class='mt-3 text-blue-500'>Bookings</h2>

  <%= turbo_stream_from 'bookings' %>
  <%= turbo_frame_tag "bookings" do %>
    <% if @bookings.any? %>
      <%= render @bookings %>
    <% else %>
      <p>No bookings available</p>
    <% end %>
  <% end %>
</div>
