<%= form_with(model: @booking, local: true) do |f| %>
  <% if @booking.errors.any? %>
    <div class="alert alert-danger mt-2" role="alert">
      <ul>
        <% @booking.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :diary_id, value: @booking&.diary&.id || Diary.last.id %>

  <div class="space-y-12">
    <div class="border-b border-gray-900 pb-12">
      <h3 class="text-base font-semibold leading-7 text-gray-900">Diary Schedule</h3>

      <div class="mt-10 grid grid-cols-2 gap-x-4 gap-y-6 sm:grid-cols-6">
        <div class="col-span-full">
          <label for="booking_reason" class="block text-sm font-medium leading-6 text-gray-900">Reason</label>
          <div class="mt-2">
            <input type="text" name="booking[reason]" id="booking_reason" autocomplete="reason" class="form-input block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="booking_start_at" class="block text-sm font-medium leading-6 text-gray-900">When is your appointment?</label>
          <div class="mt-2">
            <input type="datetime-local" name="booking[start_at]" id="booking_start_at" autocomplete="start-at" class="form-input block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="booking_end_at" class="block text-sm font-medium leading-6 text-gray-900">When does your appointment end?</label>
          <div class="mt-2">
            <input id="booking_end_at" name="booking[end_at]" type="datetime-local" autocomplete="end-at" class="form-input block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="booking_type" class="block">
            <span class="text-gray-700">What type of appointment is it?</span>
            <select id="booking_type" name="booking[booking_type]" class="block w-full mt-1 rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
              <option>Meeting</option>
              <option>Consultation</option>
              <option>Out of office</option>
            </select>
          </label>
        </div>

        <div class="sm:col-span-3">
          <label for="booking_status" class="block">
            <span class="text-gray-700">What is the status of the appointment?</span>
            <select id="booking_status" name="booking[status]" class="block w-full mt-1 rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
              <option>Booked</option>
              <option>Arrived</option>
              <option>Ready</option>
              <option>Treated</option>
              <option>Done</option>
            </select>
          </label>
        </div>

        <div class="mt-6 flex items-center justify-end gap-x-6">
          <button type="button" class="text-sm font-semibold leading-6 text-gray-900">Cancel</button>
          <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
