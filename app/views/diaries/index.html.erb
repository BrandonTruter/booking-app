<div class="container border-b border-gray-900/10 pb-12">
  <h1 class="text-base font-semibold text-4xl text-blue-500">GXWeb Diaries</h1>
  <table class="table tftable" border="1">
    <thead>
      <tr>
        <th>ID</th>
		    <th>Title</th>
		    <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @diaries.each do |diary| %>
        <tr>
          <td><%= diary.id %></td>
          <td><%= diary.title %></td>
          <td><%= diary.description %></td>
          <td><%= link_to "Bookings", bookings_path(diary_id: diary.id), class: 'bg-gray-800 hover:bg-gray-700 text-white font-semibold py-2 px-4 border border-gray-700 rounded-lg shadow-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
