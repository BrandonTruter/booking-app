<div class="border-b border-gray-900/10 pb-12">
  <h1 class="text-base font-semibold text-4xl text-blue-500">GXWeb Diaries</h1>
  <table class="tftable" border="1" data-controller="diary-ui" >
		<thead>
			<tr>
        <th>UID</th>
        <th>Name</th>
        <th>Date</th>
        <th>Bookings</th>
			</tr>
    </thead>
    <tbody>
      <%= render partial: "diary", collection: @diaries %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="2">
          <%= link_to "Back", entities_path, class: 'bg-gray-800 hover:bg-gray-700 text-white font-semibold py-2 px-4 border border-gray-700 rounded-lg shadow-sm' %>
        </th>
        <th colspan="2">
          <%= link_to "Bookings", bookings_path, class: 'bg-gray-800 hover:bg-gray-700 text-white font-semibold py-2 px-4 border border-gray-700 rounded-lg shadow-sm' %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>
